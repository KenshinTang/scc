<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_gravity="bottom"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/first"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/tab_home_click"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="top|center"
                android:layout_marginTop="5dp"
                android:padding="4dp"
                android:src="@mipmap/home" />

            <TextView
                android:id="@+id/tab_home_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="3dp"
                android:text="首页"
                android:textColor="#999999"
                android:textSize="10dp" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/second"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/tab_bang"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="top|center"
                android:layout_marginTop="5dp"
                android:padding="4dp"
                android:src="@mipmap/linkmap" />

            <TextView
                android:id="@+id/tab_bang_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="3dp"
                android:text="店铺"
                android:textColor="#999999"
                android:textSize="10dp" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/center"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/center_img"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_gravity="top|center"
                android:layout_marginTop="5dp"
                android:padding="4dp"
                android:src="@mipmap/hbao_h" />

            <TextView
                android:id="@+id/tab_Qrq_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="3dp"
                android:text="红包"
                android:textColor="#E30008"
                android:textSize="10dp" />
        </FrameLayout>


        <FrameLayout
            android:id="@+id/third"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            >

            <ImageView
                android:id="@+id/kecheng"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_gravity="top|center"
                android:layout_marginTop="5dp"
                android:padding="4dp"
                android:src="@mipmap/change" />

            <TextView
                android:id="@+id/tab_tui_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="3dp"
                android:text="商城"
                android:textColor="#999999"
                android:textSize="10dp" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/fouth"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/my_wo"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_gravity="top|center"
                android:layout_marginTop="5dp"
                android:padding="4dp"
                android:src="@mipmap/mine" />

            <TextView
                android:id="@+id/tab_mine_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="3dp"
                android:text="我的"
                android:textColor="#999999"
                android:textSize="10dp" />
        </FrameLayout>
    </LinearLayout>

</FrameLayout>