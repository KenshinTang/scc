<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    >
    <RelativeLayout
        android:layout_width="260dp"
        android:layout_height="160dp"
        android:background="@drawable/botton10">

        <TextView
            android:id="@+id/xin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="@string/xin"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:text="@string/ban"
            android:layout_below="@+id/xin"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/zanbu"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:background="@drawable/f9"
            android:text="@string/zhan"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:id="@+id/xianzai"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:background="@drawable/f8"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="#ffffff"
            android:text="@string/sheng"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

</LinearLayout>
