<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_marker"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="#ffffff"
        android:clickable="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"><!-- 如果不添加这个属性，当点击布局时，会和地图点击事件干扰 -->
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="椰子健身中心"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:textColor="#000000"
            />
        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:text="陕西省西安市雁塔区高新三路3号"
            />
        <ImageView
            android:id="@+id/photo"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/address"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/photo"
            />
        <LinearLayout
            android:id="@+id/Llayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true">
        <ImageView
            android:id="@+id/im_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/time"/>
       <TextView
           android:id="@+id/k_time"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="开放时间:"
           android:layout_marginLeft="5dp"
          />
        <TextView
            android:id="@+id/tv_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全天周一至周日"
            android:layout_marginLeft="5dp"
            />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="15dp"
            android:layout_alignTop="@+id/Llayout"
            android:layout_alignEnd="@+id/photo">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/site"
            android:layout_marginRight="10dp"
            />

            <TextView
                android:id="@+id/distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="距离" />
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
